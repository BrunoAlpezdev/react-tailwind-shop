{
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./", // Ajusta esto según la ubicación de tu tsconfig
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@pages/*": ["src/pages/*"],
      "@base/*": ["src/pages/base/*"],
      "@data/*": ["src/data/*"],
      "@context/*": ["src/context/*"],
      "@services/*": ["src/services/*"]
    },
    "jsx": "react-jsx", // Si usas React 17+
    "strict": true // Habilita el modo estricto, opcional
  },
  "include": ["src/**/**/*"]
}
