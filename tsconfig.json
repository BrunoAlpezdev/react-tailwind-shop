{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./", // Ajusta esto según la ubicación de tu tsconfig
    "paths": {
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@pages/*": ["src/pages/*"],
      "@base/*": ["src/pages/base/*"],
      "@data/*": ["src/data/*"]
    },
    "jsx": "react-jsx", // Si usas React 17+
    "strict": true // Habilita el modo estricto, opcional
  },
  "include": ["src/**/**/*"], 
  "exclude": ["node_modules", "**/*.spec.ts"]
}
